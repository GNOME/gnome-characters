{
    "app-id" : "org.gnome.CharactersDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "command" : "gnome-characters",
    "branch" : "master",
    "sdk" : "org.gnome.Sdk",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name" : "gnome-desktop",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddebug-tools=false",
                "-Ddesktop_docs=false",
                "-Dudev=disabled",
                "-Dlegacy_library=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gnome-desktop"
                }
            ]
        },
        {
            "name" : "libunistring",
            "cleanup" : [
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ftp.gnu.org/gnu/libunistring/libunistring-0.9.10.tar.xz",
                    "sha256" : "eb8fb2c3e4b6e2d336608377050892b54c3c983b646c561836550863003c05d7"
                }
            ]
        },
        {
            "name" : "gnome-characters",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/gnome/gnome-characters.git"
                }
            ]
        }
    ]
}
