{
    "app-id" : "org.gnome.CharactersDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "command" : "gnome-characters",
    "branch" : "master",
    "sdk" : "org.gnome.Sdk",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name": "noto-emoji",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "cp ./fonts/NotoColorEmoji.ttf /app/share/fonts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/googlefonts/noto-emoji/archive/refs/tags/v2.034.tar.gz",
                    "sha256": "a5af92ba8e297e447562d7bdb11453fa40be6d88655e4a647976f0c9be4245ab"
                }
            ]
        },
        {
            "name" : "gnome-desktop",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddebug-tools=false",
                "-Ddesktop_docs=false",
                "-Dudev=disabled",
                "-Dlegacy_library=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gnome-desktop"
                }
            ]
        },
        {
            "name" : "gnome-characters",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/gnome/gnome-characters.git",
                    "branch" : "main"
                }
            ]
        }
    ]
}
